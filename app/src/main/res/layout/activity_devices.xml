<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootDevices"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbarDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background"
        android:titleTextColor="@color/app_text_primary"
        app:menu="@menu/menu_devices" />

    <WebView
        android:id="@+id/webHouse"
        android:layout_width="match_parent"
        android:layout_height="260dp" />

    <!-- Bloc infos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@color/app_surface">

        <TextView
            android:id="@+id/tvHouseId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maison : #"
            android:textColor="@color/app_text_primary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Propriétaire : (à venir)"
            android:textColor="@color/app_text_secondary" />

        <TextView
            android:id="@+id/tvLightsOn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lumières allumées : 0"
            android:textColor="@color/app_text_secondary" />

        <TextView
            android:id="@+id/tvShuttersOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volets ouverts : 0"
            android:textColor="@color/app_text_secondary" />

        <TextView
            android:id="@+id/tvDoorsOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Portes ouvertes : 0"
            android:textColor="@color/app_text_secondary" />

        <TextView
            android:id="@+id/tvGarageOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Garage ouvert : 0"
            android:textColor="@color/app_text_secondary" />
    </LinearLayout>

    <!-- Onglet 1 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToggleComponents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 • Composants"
        android:textColor="@color/app_text_primary"
        app:backgroundTint="@color/app_accent_dark"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:id="@+id/panelComponents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/app_surface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/spinnerType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/spinnerState"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>

        <ListView
            android:id="@+id/lvDevices"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- Onglet 2 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 • Commande de groupe (à venir)"
        android:textColor="@color/app_text_primary"
        app:backgroundTint="@color/app_accent_dark"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:id="@+id/panelGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/app_surface"/>

    <!-- Onglet 3 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnToggleUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 • Utilisateurs (à venir)"
        android:textColor="@color/app_text_primary"
        app:backgroundTint="@color/app_accent_dark"
        android:layout_marginTop="8dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp" />

    <LinearLayout
        android:id="@+id/panelUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/app_surface">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Add"
            android:textColor="@color/app_text_primary"
            app:backgroundTint="@color/app_button_neutral"/>
    </LinearLayout>

</LinearLayout>
